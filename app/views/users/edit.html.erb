<div class="body">
      <div class="container">

        <p id="notice"></p>


        <h2>User info</h2>

<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
        <div id="error_explanation">
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>

        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        </div>
<% end %>




  <div class="field">
    <div class="field_with_errors">
    <label for="user_name">Name</label></div>
      <div class="field_with_errors">
      <%= f.text_field :name, autofocus: true, class:"name", id:"inputEmail", placeholder:"名前"%>
    </div>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, class:"introduction", id:"inputEmail", placeholder:"自己紹介"%>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
  <% end %>

      </div>
    </div>